<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity"
    android:padding="6dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.2.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageLogoApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_gestincris_200x65"
        app:layout_constraintBottom_toBottomOf="@+id/imageLogoCli"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageLogoCli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/id_glass_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toEndOf="@+id/imageLogoApp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/texUser"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Fernado Martinez | 001"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageLogoCli"
        android:layout_marginTop="12dp"
        android:background="#AEC6CF"
        />

    <Button
        android:id="@+id/btnDescargar"
        android:layout_width="130dp"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:text="Descargar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texUser"
        android:backgroundTint="#476FE6"/>

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="130dp"
        android:layout_marginTop="4dp"

        android:layout_height="wrap_content"
        android:text="Entrar"
        app:layout_constraintEnd_toStartOf="@+id/btnDescargar"
        app:layout_constraintTop_toBottomOf="@+id/texUser"
        android:backgroundTint="#476FE6"/>

    <Button
        android:id="@+id/btnSuper"
        android:layout_width="130dp"
        android:layout_marginTop="4dp"

        android:layout_height="wrap_content"
        android:text="Super"
        app:layout_constraintStart_toEndOf="@+id/btnDescargar"
        app:layout_constraintTop_toBottomOf="@+id/texUser"
        android:backgroundTint="#476FE6"/>

    <Button
        android:id="@+id/btnCitas"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#476FE6"
        android:text="Citas"
        app:layout_constraintStart_toStartOf="@+id/btnEntrar"
        app:layout_constraintTop_toBottomOf="@+id/btnEntrar" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#476FE6"
        android:text="Buscar"
        app:layout_constraintStart_toStartOf="@+id/btnDescargar"
        app:layout_constraintTop_toBottomOf="@+id/btnDescargar" />

    <Button
        android:id="@+id/btnCargar"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#476FE6"
        android:text="Cargar"
        app:layout_constraintStart_toStartOf="@+id/btnSuper"
        app:layout_constraintTop_toBottomOf="@+id/btnSuper" />

    <Space
        android:id="@+id/spc"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btnBuscar"
        tools:layout_editor_absoluteX="6dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/spc">
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerOrdenEstado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
    
    
</androidx.constraintlayout.widget.ConstraintLayout>