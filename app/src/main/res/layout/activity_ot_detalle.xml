<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.OtDetalleActivity">

    <!-- He envuelto todo en un ScrollView para que quepa en la pantalla -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.2.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageLogoApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_gestincris_200x65"
                app:layout_constraintBottom_toBottomOf="@+id/imageLogoCli"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <ImageView
                android:id="@+id/imageLogoCli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/id_glass_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.583"
                app:layout_constraintStart_toEndOf="@+id/imageLogoApp"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/texUser"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:background="#AEC6CF"
                android:gravity="center"
                android:text="Fernado Martinez | 001"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageLogoCli" />
            <Button
                android:id="@+id/btnDescargar"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="#476FE6"
                android:text="Descargar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/texUser" />

            <Button
                android:id="@+id/btnEntrar"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="#476FE6"
                android:text="Entrar"
                app:layout_constraintEnd_toStartOf="@+id/btnDescargar"
                app:layout_constraintTop_toBottomOf="@+id/texUser" />

            <Button
                android:id="@+id/btnSuper"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="#476FE6"
                android:text="Super"
                app:layout_constraintStart_toEndOf="@+id/btnDescargar"
                app:layout_constraintTop_toBottomOf="@+id/texUser" />

            <Button
                android:id="@+id/btnCitas"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#476FE6"
                android:text="Citas"
                app:layout_constraintStart_toStartOf="@+id/btnEntrar"
                app:layout_constraintTop_toBottomOf="@+id/btnEntrar" />

            <Button
                android:id="@+id/btnBuscar"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#476FE6"
                android:text="Buscar"
                app:layout_constraintStart_toStartOf="@+id/btnDescargar"
                app:layout_constraintTop_toBottomOf="@+id/btnDescargar" />

            <Button
                android:id="@+id/btnCargar"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#476FE6"
                android:text="Cargar"
                app:layout_constraintStart_toStartOf="@+id/btnSuper"
                app:layout_constraintTop_toBottomOf="@+id/btnSuper" />

            <Space
                android:id="@+id/spc"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintTop_toBottomOf="@+id/btnBuscar"
                tools:layout_editor_absoluteX="6dp" />

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEFEF"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:text="Órdenes de trabajo"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spc" />

            <!-- PRIMERA TARJETA: DATOS DEL USUARIO -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_usuario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTitulo"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/header_usuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#7894E7"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="5845 - PEDRO LUIS SANTANA"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/details_usuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#EBEBEB"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PORTUGAL 33"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="28943 · FUENLABRADA (MADRID)"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Caducada"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="PTE. MEDICIÓN"
                            android:textColor="@android:color/black" />

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SEGUNDA TARJETA: DESCRIPCIÓN -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_descripcion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_usuario"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/header_descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#7894E7"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Descripción"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/details_descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#EBEBEB"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="visible"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rotura de cristal climalit en ventana de salón por golpe accidental. Medidas aproximadas: 120x80 cm. Se solicita peritaje."
                            android:textColor="@android:color/black"/>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- TERCERA TARJETA: DATOS EN I2COL -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_i2col"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_descripcion"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/header_i2col"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#7894E7"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Datos en I2Col"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/details_i2col"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#EBEBEB"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="visible"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ESTA OT NO ESTÁ DISPONIBLE EN EL SERVICIO DE I2COL"
                            android:textColor="@android:color/black"/>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CUARTA TARJETA: SEGUIMIENTO -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_seguimiento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_i2col"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/header_seguimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#7894E7"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Seguimiento"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Para el seguimiento, lo ideal sería un RecyclerView,
                         pero para el mockup usamos una tabla simple -->
                    <TableLayout
                        android:id="@+id/details_seguimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#EBEBEB"
                        android:padding="12dp"
                        android:stretchColumns="1"
                        android:visibility="visible"
                        tools:visibility="visible">

                        <!-- Cabecera de la tabla -->
                        <TableRow>
                            <TextView
                                android:text="Fecha"
                                android:textStyle="bold"
                                android:paddingEnd="8dp"/>
                            <TextView
                                android:text="Comentario"
                                android:textStyle="bold"/>
                        </TableRow>

                        <!-- Fila 1 -->
                        <TableRow android:layout_marginTop="4dp">
                            <TextView
                                android:text="16-09-22\n06:25"
                                android:textSize="12sp"
                                android:paddingEnd="8dp"/>
                            <TextView
                                android:text="-- APERTURA MANUAL DE O.T. --"
                                android:textSize="12sp"/>
                        </TableRow>

                        <!-- Fila 2 -->
                        <TableRow android:layout_marginTop="4dp">
                            <TextView
                                android:text="16-09-22\n11:54"
                                android:textSize="12sp"
                                android:paddingEnd="8dp"/>
                            <TextView
                                android:text="ENTREGADA O.T. EL 16-09-2022 A OPERARIO..."
                                android:textSize="12sp"/>
                        </TableRow>
                        <!-- Puedes seguir añadiendo TableRow para más entradas -->
                    </TableLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ***** NUEVA SECCIÓN DE BOTONES Y ARCHIVOS ***** -->
            <LinearLayout
                android:id="@+id/photo_actions_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@+id/card_seguimiento"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Botón 'Ver fotos' -->
                <Button
                    android:id="@+id/btnVerFotos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ver fotos"
                    app:iconGravity="textStart"
                    android:backgroundTint="#D36E70"/>

                <!-- Contenedor para la primera fila de botones (grises) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:layout_marginEnd="1dp"
                        android:background="#D9D9D9">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="910000001"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:layout_marginStart="1dp"
                        android:background="#D9D9D9">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="600000000"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Contenedor para la segunda fila de botones (amarillo y azul) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnDiagrama"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="1dp"
                        android:text="Diagrama"
                        android:backgroundTint="#F8D568"
                        android:textColor="@android:color/black"/>

                    <Button
                        android:id="@+id/btnFoto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="1dp"
                        android:text="Foto"
                        android:backgroundTint="#79B3CE"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <!-- Selector de archivo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/btnSeleccionarArchivo"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Seleccionar archivo"
                        android:textSize="12sp"
                        android:backgroundTint="#D9D9D9"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Ningún archivo seleccionado"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
